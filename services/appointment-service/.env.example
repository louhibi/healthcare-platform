# Appointment Service Environment Variables
# Copy this file to .env and update the values

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=appointment-db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=appointment_service_db

# =============================================================================
# Service Configuration
# =============================================================================
PORT=8083
SERVICE_NAME=appointment-service

# =============================================================================
# External Service URLs
# =============================================================================
# User service for doctor/user lookups
USER_SERVICE_URL=http://user-service:8081

# Service timeout settings (seconds)
USER_SERVICE_TIMEOUT=30

# =============================================================================
# Authentication & Security
# =============================================================================
# JWT secret (must match user-service and api-gateway)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-256-bits

# =============================================================================
# Logging & Debug
# =============================================================================
LOG_LEVEL=debug
GIN_MODE=debug
ENABLE_SQL_LOGGING=false

# =============================================================================
# Healthcare Entity Configuration
# =============================================================================
# Default settings for new entities
DEFAULT_COUNTRY=Canada
DEFAULT_LANGUAGE=en
DEFAULT_TIMEZONE=America/Toronto

# =============================================================================
# Appointment Configuration
# =============================================================================
# Default appointment duration in minutes
DEFAULT_APPOINTMENT_DURATION=30

# Maximum advance booking period in days
MAX_ADVANCE_BOOKING_DAYS=90

# Working hours defaults (24-hour format)
DEFAULT_START_HOUR=08
DEFAULT_END_HOUR=17

# =============================================================================
# Notification Settings
# =============================================================================
# Email notifications for appointments
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false

# Reminder timing (hours before appointment)
APPOINTMENT_REMINDER_HOURS=24,2

# =============================================================================
# Security
# =============================================================================
# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Monitoring & Health
# =============================================================================
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# =============================================================================
# Cache Configuration
# =============================================================================
# Redis for caching availability data
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL_SECONDS=300

# =============================================================================
# Environment
# =============================================================================
ENV=development