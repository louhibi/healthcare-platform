# Healthcare Platform - Environment Variables Example
# Copy this file to .env and update the values for your environment

# =============================================================================
# Database Configuration
# =============================================================================

# User Service Database
USER_DB_HOST=user-db
USER_DB_PORT=5432
USER_DB_USER=postgres
USER_DB_PASSWORD=postgres
USER_DB_NAME=user_service_db

# Patient Service Database  
PATIENT_DB_HOST=patient-db
PATIENT_DB_PORT=5432
PATIENT_DB_USER=postgres
PATIENT_DB_PASSWORD=postgres
PATIENT_DB_NAME=patient_service_db

# Appointment Service Database
APPOINTMENT_DB_HOST=appointment-db
APPOINTMENT_DB_PORT=5432
APPOINTMENT_DB_USER=postgres
APPOINTMENT_DB_PASSWORD=postgres
APPOINTMENT_DB_NAME=appointment_service_db

# Location Service Database
LOCATION_DB_HOST=location-db
LOCATION_DB_PORT=5432
LOCATION_DB_USER=postgres
LOCATION_DB_PASSWORD=postgres
LOCATION_DB_NAME=location_service_db

# Config Service Database
CONFIG_DB_HOST=config-db
CONFIG_DB_PORT=5432
CONFIG_DB_USER=postgres
CONFIG_DB_PASSWORD=postgres
CONFIG_DB_NAME=config_service_db

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# Service Configuration
# =============================================================================

# Service Ports
API_GATEWAY_PORT=8080
USER_SERVICE_PORT=8081
PATIENT_SERVICE_PORT=8082
APPOINTMENT_SERVICE_PORT=8083
LOCATION_SERVICE_PORT=8084
CONFIG_SERVICE_PORT=8085

# Service URLs (for service-to-service communication)
USER_SERVICE_URL=http://user-service:8081
PATIENT_SERVICE_URL=http://patient-service:8082
APPOINTMENT_SERVICE_URL=http://appointment-service:8083
LOCATION_SERVICE_URL=http://location-service:8084
CONFIG_SERVICE_URL=http://config-service:8085

# Frontend public API host (workstation or domain) â€“ replace with your machine's hostname or domain
# Example: my-workstation.local, host.docker.internal, dev.example.com
FRONTEND_API_HOST=your-hostname.example.local

# Frontend Vite build-time API URLs (overridable at docker-compose runtime)
VITE_API_URL=http://${FRONTEND_API_HOST}:${API_GATEWAY_PORT}
VITE_API_BASE_URL=http://${FRONTEND_API_HOST}:${API_GATEWAY_PORT}/api

# =============================================================================
# Authentication & Security
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-256-bits
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# API Keys (if needed for external services)
API_KEY_ENCRYPTION_SALT=your-encryption-salt-here

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-User-ID,X-User-Email,X-User-Role,X-Healthcare-Entity-ID

# =============================================================================
# Application Environment
# =============================================================================

# Environment (development, staging, production)
APP_ENV=development
LOG_LEVEL=debug
GIN_MODE=debug

# =============================================================================
# External Service Configuration
# =============================================================================

# Email Service (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@healthcare-platform.com

# SMS Service (for notifications)
SMS_PROVIDER=
SMS_API_KEY=
SMS_FROM_NUMBER=

# File Storage (AWS S3, Google Cloud Storage, etc.)
STORAGE_PROVIDER=local
STORAGE_BUCKET=
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_REGION=

# =============================================================================
# Healthcare Compliance & Localization
# =============================================================================

# Default Configuration
DEFAULT_COUNTRY=Canada
DEFAULT_LANGUAGE=en
DEFAULT_TIMEZONE=America/Toronto
DEFAULT_CURRENCY=CAD

# HIPAA Compliance
HIPAA_AUDIT_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years

# Data Encryption
DATA_ENCRYPTION_KEY=your-data-encryption-key-32-chars
PHI_ENCRYPTION_ENABLED=true

# =============================================================================
# Monitoring & Observability
# =============================================================================

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Tracing
TRACING_ENABLED=false
JAEGER_ENDPOINT=

# Health Checks
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s

# =============================================================================
# Rate Limiting
# =============================================================================

# API Gateway Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Service-specific Rate Limits
USER_SERVICE_RATE_LIMIT=200
PATIENT_SERVICE_RATE_LIMIT=500
APPOINTMENT_SERVICE_RATE_LIMIT=300

# =============================================================================
# Feature Flags
# =============================================================================

# New Features
ENABLE_PATIENT_PORTAL=true
ENABLE_APPOINTMENT_SCHEDULING=true
ENABLE_MEDICAL_RECORDS=false
ENABLE_BILLING_INTEGRATION=false

# International Features
ENABLE_MULTI_COUNTRY=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_MULTI_CURRENCY=true

# =============================================================================
# Development & Testing
# =============================================================================

# Database Seeding
SEED_DATABASE=true
SEED_SAMPLE_DATA=true

# Debug Features
ENABLE_DEBUG_ROUTES=true
ENABLE_SQL_LOGGING=false
ENABLE_REQUEST_LOGGING=true

# Testing
TEST_DATABASE_URL=postgres://postgres:postgres@localhost:5433/test_db
RUN_INTEGRATION_TESTS=false