# Patient Portal Frontend Environment Variables
# Copy this file to .env.local for development, .env.production for production

# =============================================================================
# API Configuration
# =============================================================================
# Backend API Gateway URL
VITE_API_URL=http://localhost:8080
VITE_API_BASE_URL=http://localhost:8080/api

# Direct service URLs (for debugging)
VITE_USER_SERVICE_URL=http://localhost:8081
VITE_PATIENT_SERVICE_URL=http://localhost:8082
VITE_APPOINTMENT_SERVICE_URL=http://localhost:8083

# API request timeout in milliseconds
VITE_API_TIMEOUT=10000

# =============================================================================
# Application Configuration
# =============================================================================
VITE_APP_NAME=Healthcare Platform
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# =============================================================================
# Authentication Configuration
# =============================================================================
VITE_JWT_STORAGE_KEY=healthcare_token
VITE_SESSION_TIMEOUT=480

# Remember me duration in days
VITE_REMEMBER_ME_DAYS=30

# =============================================================================
# Healthcare Platform Configuration
# =============================================================================
# Supported countries (comma-separated)
VITE_SUPPORTED_COUNTRIES=Canada,USA,Morocco,France

# Supported languages (comma-separated)
VITE_SUPPORTED_LANGUAGES=en,fr,ar

# Default settings for new entities
VITE_DEFAULT_LANGUAGE=en
VITE_DEFAULT_COUNTRY=Canada
VITE_DEFAULT_TIMEZONE=America/Toronto

# =============================================================================
# Timezone Configuration - CRITICAL
# =============================================================================
# NO FALLBACK TIMEZONE - Entity timezone must be properly configured
# VITE_FALLBACK_TIMEZONE=UTC  # COMMENTED OUT - No fallbacks allowed per user requirements

# Timezone validation strict mode (true = throw errors for missing timezone)
VITE_TIMEZONE_STRICT_MODE=true

# =============================================================================
# Feature Flags
# =============================================================================
VITE_ENABLE_MULTI_LANGUAGE=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_PATIENT_PORTAL=true
VITE_FEATURE_APPOINTMENTS=true
VITE_FEATURE_PATIENT_MANAGEMENT=true
VITE_FEATURE_DOCTOR_AVAILABILITY=true
VITE_FEATURE_ADMIN_PANEL=true
VITE_FEATURE_BULK_SCHEDULING=true
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_ANALYTICS=false

# =============================================================================
# UI Configuration
# =============================================================================
# Items per page for lists
VITE_ITEMS_PER_PAGE=10

# Date/time display formats
VITE_DATE_FORMAT=MMM D, YYYY
VITE_TIME_FORMAT=h:mm A
VITE_DATETIME_FORMAT=MMM D, YYYY h:mm A

# =============================================================================
# Appointment Configuration
# =============================================================================
VITE_DEFAULT_APPOINTMENT_DURATION=30
VITE_AVAILABLE_DURATIONS=15,30,45,60,90,120
VITE_MAX_ADVANCE_BOOKING_DAYS=90
VITE_BUSINESS_START_HOUR=08
VITE_BUSINESS_END_HOUR=17

# =============================================================================
# Validation & Security
# =============================================================================
# Enable configuration validation on app startup (REQUIRED)
VITE_CONFIG_VALIDATION_ENABLED=true
VITE_SHOW_CONFIG_WARNINGS=true
VITE_VALIDATION_STRICT=true

# =============================================================================
# Development & Debug
# =============================================================================
VITE_DEBUG_MODE=true
VITE_LOG_API_REQUESTS=true
VITE_LOG_API_RESPONSES=false

# =============================================================================
# Notifications
# =============================================================================
VITE_TOAST_DURATION=5000
VITE_BROWSER_NOTIFICATIONS=false
